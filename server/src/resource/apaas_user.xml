<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="apaas_user">
    <select id="countByName" resultType="number">
        select count(*) from apaas_user
        <where>
            <if test="name != null">
                and name like #{name}
            </if>
        </where>
    </select>

    <select id="queryByEmail">
        select *
        from apaas_user
        where email = #{email}
        and status = #{status}
    </select>

    <select id="queryByEmails">
        select name, email, avatar  
        from apaas_user
        where status = #{status}
        and email in 
            <foreach collection="emails" open="(" close=")" separator="," item="email" index="i">
                #{email}
            </foreach>
        order by field (email, 
            <foreach collection="emails" open="" close="" separator="," item="email" index="i">
                #{email}
            </foreach>
        )
    </select>

    <insert id="insert">
        insert into apaas_user
        (
        email,
        <if test="password">
            password,
        </if>
        <if test="name">
            name,
        </if>
        <if test="avatar">
            avatar,
        </if>
        <if test="mobilePhone">
            mobile_phone,
        </if>
        create_time,
        update_time,
        role
        )
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            #{email},
            <if test="password">
                #{password},
            </if>
            <if test="name">
                #{name},
            </if>
            <if test="avatar">
                #{avatar},
            </if>
            <if test="mobilePhone">
                #{mobilePhone},
            </if>
            #{createTime},
            #{updateTime},
            #{role}
        </trim>
    </insert>

    <select id="queryAll">
        select * from apaas_user
        where
        status = 1
    </select>

    <update id="updateLisenceCode">
        update apaas_user
        set
        <if test="licenseCode">
            license_code = #{licenseCode},
        </if>
        update_time = #{updateTime}
        where email = #{email}
    </update>

    <update id="update">
        update apaas_user
        set
        <if test="status != null">
            status = #{status},
        </if>
        <if test="password != null">
            password = #{password},
        </if>
        <if test="licenseCode">
            license_code = #{licenseCode},
        </if>
        update_time = #{update_time}
        where email = #{email}
    </update>
</mapper>