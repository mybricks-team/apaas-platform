<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="apaas_refresh">
    <select id="queryAll">
        SELECT
            <choose>
            <when test="fieldName">
                id
                <foreach collection="fieldName" item="item" open="," separator="," close="" index="index">
                    ${item}
                </foreach>
            </when>
            <otherwise>
                *
            </otherwise>
        </choose>

        from ${table}
    </select>
    <select id="queryCount">
        SELECT
            count(*)
        from ${table}
    </select>
    <update id="update">
        update ${table} set ${field} = #{value}
        where id = #{id}
    </update>
</mapper>
